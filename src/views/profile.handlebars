<div class="container">
    <h1 class="title">Perfil de Usuario</h1>

    {{#if notFound}}
        <p>Usuario no encontrado.</p>
    {{else}}
        <div class="profile-card">
            <h2>{{name}}</h2>
            <p>Email: {{email}}</p>
            <p>Rol: {{role}}</p>
        </div>
    {{/if}}
</div>
